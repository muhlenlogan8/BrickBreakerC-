{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build BrickBreaker",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-I${workspaceFolder}/libs/include",
                "-L${workspaceFolder}/libs/lib",
                "-o",
                "brickbreaker.exe",
                "src/*.cpp",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
